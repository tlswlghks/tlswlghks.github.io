<nav class="nav__list">
  <input id="ac-toc" name="accordion-toc" type="checkbox" />
  <label for="ac-toc">카테고리</label>
  <ul class="nav__items" id="category_tag_menu">
    {% for item in site.data.navigation.main %}
      <li>
        {% if item.sublinks %}
          <span class="nav__sub-title" style="margin: 0; margin-left: 10px; cursor: pointer;" onclick="toggle('{{ item.title | slugify }}')">
            {{ item.title }}
          </span>
          <ul id="{{ item.title | slugify }}" style="display: none;">
            {% for sublink in item.sublinks %}
              <li>
                {% if sublink.url %}
                  <a href="{{ sublink.url }}" style="margin-left: 15px;">- {{ sublink.title }}</a>
                {% else %}
                  <span class="nav__sub-title" style="margin-left: 15px; cursor: pointer;" onclick="toggle('{{ sublink.title | slugify }}')">
                    - {{ sublink.title }}
                  </span>
                  <ul id="{{ sublink.title | slugify }}" style="display: none;">
                    {% for sub_sublink in sublink.sublinks %}
                      <li><a href="{{ sub_sublink.url }}" style="margin-left: 30px;">{{ sub_sublink.title }}</a></li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </li>
            {% endfor %}
          </ul>
        {% else %}
          <a href="{{ item.url }}" style="margin-left: 10px;">{{ item.title }}</a>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
  <script>
  function toggle(id) {
    var subMenu = document.getElementById(id);
    if (subMenu.style.display === "none" || subMenu.style.display === "") {
      subMenu.style.display = "block";
    } else {
      subMenu.style.display = "none";
    }
  }
  </script>
</nav>

