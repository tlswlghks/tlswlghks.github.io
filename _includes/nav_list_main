    <script>
        function toggle(id) {
            var subMenu = document.getElementById(id);
            if (subMenu.style.display === "none") {
                subMenu.style.display = "block";
            } else {
                subMenu.style.display = "none";
            }
        }

        function Introduce() {
            window.location.href = "/about/";
        }
    </script>
